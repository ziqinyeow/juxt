{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [],
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@/*": ["./*"]
    }
  },
  "include": [".", "**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"]
}
